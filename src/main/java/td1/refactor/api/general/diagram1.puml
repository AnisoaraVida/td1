@startuml

class Burger
class Cheddar
class DeepFriedOnions
class Meat
class Sauce
class Tomato

interface FoodConstituent
interface FoodProduct
interface Product

enum MeatType
enum SauceType

 FoodConstituent <-- FoodProduct
