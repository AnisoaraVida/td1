 +price():double
 +calories_per_100g():double
}

enum SauceType{
 BURGER, BARBECUE, BEARNAISE
 +calories_per_100g():double
}

enum MeatType{
 BEEF, WHITEFISH
 +price():double
 +calories_per_100g():double
}

